%%Macros
\newcommand*{\rom}[1]{\expandafter\@slowromancap\romannumeral #1@} %% Convert to roman numerals

%% Font sizes
\newcommand{\sixteen}{\fontsize{16}{0}\selectfont}
\newcommand{\fourteen}{\fontsize{14}{0}\selectfont}
\newcommand{\thirteen}{\fontsize{13}{0}\selectfont}
\newcommand{\eleven}{\fontsize{11}{0}\selectfont}

%% Document settings
\linespread{1.5}
\newcommand\thefontsize[1]{{#1 \f@size pt\par}}


\titleformat{\section} % Command
[hang] % Shape
{\bfseries} % Format
{\sixteen\thesection\quad} % Label
{0pt} % Sep
{\sixteen\bfseries} % Before code
{} % After code

\titleformat{\subsection}
[hang]
{\bfseries}
{\fourteen\thesubsection\quad}
{0pt}
{\fourteen\bfseries}
{}

\titleformat{\subsubsection}
[hang]
{\bfseries}
{\thirteen\thesubsubsection\quad}
{0pt}
{\thirteen\bfseries}
{}

